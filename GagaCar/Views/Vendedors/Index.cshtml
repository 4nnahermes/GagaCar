@model IEnumerable<GagaCar.Models.Vendedor>

@{
    ViewData["Title"] = "Index";
}

<h1>Vendedores</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAdmissao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAdmissao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Matricula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salario)
                </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning small ms-2">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info small ms-2">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary small ms-2">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3 text-end">
    <a asp-action="Create" class="btn btn-secondary">Adicionar Vendedor</a>
</div>
