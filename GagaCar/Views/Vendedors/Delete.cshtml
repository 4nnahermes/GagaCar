    ViewData["Title"] = "Delete";
}

<h1>Remover Vendedor</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataAdmissao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataAdmissao)
        </dd>
        <dt class="col-sm-2">
