@model IEnumerable<GagaCar.Models.Carro>

@{
    ViewData["Title"] = "Index";
}

<h1>Carros</h1>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnoDeFabricacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnoModelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chassi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoDeFabricacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoModelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chassi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning small ms-2">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info small ms-2">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary small ms-2">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="mt-3 text-end">
    <a asp-action="Create" class="btn btn-secondary">Adicionar Carro</a>
</div>
