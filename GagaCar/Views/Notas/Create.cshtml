@model GagaCar.Models.ViewModels.NotaFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar Nota</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nota.Numero" class="control-label" type="text"></label>
                <input asp-for="Nota.Numero" class="form-control" type="text" />
                <span asp-validation-for="Nota.Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nota.DataEmissao" class="control-label" type="date"> </label>
                <input asp-for="Nota.DataEmissao" class="form-control" type="date" />
                <span asp-validation-for="Nota.DataEmissao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nota.Garantia" class="control-label"></label>
                <input asp-for="Nota.Garantia" class="form-control" />
                <span asp-validation-for="Nota.Garantia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nota.ValorVenda" class="control-label"></label>
                <input asp-for="Nota.ValorVenda" class="form-control" />
                <span asp-validation-for="Nota.ValorVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nota.ClienteId" class="control-label"></label>
                <select asp-for="Nota.ClienteId" class="form-control" asp-items="@(new SelectList(Model.Clientes, "Id", "Nome"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Nota.VendedorId" class="control-label"></label>
                <select asp-for="Nota.VendedorId" class="form-control" asp-items="@(new SelectList(Model.Vendedores, "Id", "Nome"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Nota.CarroId" class="control-label"></label>
                <select asp-for="Nota.CarroId" class="form-control" asp-items="@(new SelectList(Model.Carros, "Id", "Marca"))"></select>
            </div>
            <div class="form-group gap-2 mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
