@model IEnumerable<GagaCar.Models.Nota>

@{
    ViewData["Title"] = "Index";
}

<h1>Notas</h1>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEmissao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Garantia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendedor.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carro.Marca)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEmissao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Garantia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendedor.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carro.Marca)
            </td>
            <td class="text-end">
                @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning small ms-2">Editar</a>*@
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info small ms-2">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary small ms-2">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="mt-3 text-end">
    <a asp-action="Create" class="btn btn-secondary">Adicionar Nota</a>
</div>